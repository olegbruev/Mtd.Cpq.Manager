@page
@model CreateModel

@{
    ViewData["Title"] = "Create product";
    string catalogId = @HttpContext.Request.Query["id"];
}
<form method="post" autocomplete="off" enctype="multipart/form-data">
    <div class="d-flex">
        <div class="flex-grow-1">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="p-2 align-items-center">
            <button class="btn btn-primary">
                <i class="fas fa-save"></i>
                Save
            </button>
        </div>
    </div>
    <div>
        <a asp-page="Index" asp-route-id="@catalogId">
            <i class="fas fa-arrow-left"></i>
            Back to List
        </a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @await Component.InvokeAsync("MTDImgSelector", new { id = "1" })
                <span asp-validation-for="MtdCpqProduct.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProduct.IdNumber" class="control-label"></label>
                <input asp-for="MtdCpqProduct.IdNumber" class="form-control" required />
                <span asp-validation-for="MtdCpqProduct.IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProduct.Name" class="control-label"></label>
                <input asp-for="MtdCpqProduct.Name" class="form-control" />
                <span asp-validation-for="MtdCpqProduct.Name" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="MtdCpqProduct.MtdCpqCatalogId" class="control-label"></label>
                <input asp-for="MtdCpqProduct.MtdCpqCatalogId" class="form-control" value="@catalogId" />
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="MtdCpqProduct.Note" class="control-label"></label>
                <textarea asp-for="MtdCpqProduct.Note" class="form-control" rows="9"></textarea>
                <span asp-validation-for="MtdCpqProduct.Note" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
