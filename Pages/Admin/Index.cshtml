@page
@model IndexModel
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> Localizer;

@{
    ViewData["Title"] = Localizer["Interface settings"];
}

<h1>@ViewBag.Title</h1>

<hr />

<form method="post" autocomplete="off" enctype="multipart/form-data">

    <div>
        <div class="form-group">
            <label>@Localizer["Application logo"]</label>
            @await Component.InvokeAsync("MTDImgSelector", new { id = "LogoImg", required = false, imgArray = Model.LogoImg })
        </div>
    </div>

    <button class="btn btn-primary">
        <i class="fas fa-save"></i>
        Save
    </button>

</form>


