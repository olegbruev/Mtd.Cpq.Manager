@model DetailsModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource>  HtmlLocalizer

<style>
    h1 {
        font-size: 2em;
    }
    h2 {
        font-size: 1.5em;
    }
    h3 {
        font-size: 1.17em;
    }
    h4 {
        font-size: 1em;
    }
    h5 {
        font-size: 0.83em;
    }
    h6 {
        font-size: 0.67em;
    }
</style>

<h1>@Model.MtdCpqProposal.MasterName</h1>
<strong>TECH DATA № @Model.MtdCpqProposal.IdNumber AT @Model.MtdCpqProposal.DateCreation.ToShortDateString()</strong>

<hr />
<table style="width: 100%">
    <tbody>
        @if (Model.MtdCpqProposal.ConfigMasterInluded == 1
           && @Model.MtdCpqProposal.MasterDatasheet != null
               && @Model.MtdCpqProposal.MasterDatasheet.Length > 0)
        {
            <tr style="background-color:gray; color: white; font-weight:bold; padding: 2px"><td>@Model.MtdCpqProposal.MasterName</td></tr>
            <tr style="border-bottom: 1px solid #ccc"><td>@Html.Raw(@Model.MtdCpqProposal.MasterDatasheet)</td></tr>
        }
        @foreach (var item in Model.Items)
        {
            if (item.Datasheet != null && item.Datasheet.Length > 0)
            {
                <tr style="background-color:gray; color: white; font-weight:bold; padding: 2px"><td>@item.Name</td></tr>
                <tr style="border-bottom: 1px solid #ccc"><td>@Html.Raw(@item.Datasheet)</td></tr>
            }
        }
    </tbody>
</table>