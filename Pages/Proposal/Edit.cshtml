@page
@model Mtd.Cpq.Manager.Pages.Proposal.EditModel
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> Localizer;

@{
    ViewData["Title"] = Localizer["Edit Titles and Headers"];
}
<form method="post" autocomplete="off" enctype="multipart/form-data">

    <div class="d-flex flex-wrap">
        <div class="flex-grow-1">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="p-2 align-items-center">
            <button class="btn btn-primary">
                <i class="fas fa-save"></i>
                Save
            </button>
        </div>
    </div>
    <div>
        <a asp-page="./Details" asp-route-Id="@Model.MtdCpqProposal.Id">
            <i class="fas fa-arrow-left"></i>
            Back to details
        </a>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MtdCpqProposal.Id" />
            <div class="form-group">
                <label asp-for="MtdCpqProposal.Logo" class="control-label"></label>
                @await Component.InvokeAsync("MTDImgSelector", new { id = Model.MtdCpqProposal.Id, imgArray = Model.MtdCpqProposal.Logo })
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.PreparedBy" class="control-label"></label>
                <input asp-for="MtdCpqProposal.PreparedBy" class="form-control" required />
                <span asp-validation-for="MtdCpqProposal.PreparedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.ContactName" class="control-label"></label>
                <input asp-for="MtdCpqProposal.ContactName" class="form-control" required />
                <span asp-validation-for="MtdCpqProposal.ContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.ContactPhone" class="control-label"></label>
                <input asp-for="MtdCpqProposal.ContactPhone" class="form-control" required />
                <span asp-validation-for="MtdCpqProposal.ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.ContactEmail" class="control-label"></label>
                <input asp-for="MtdCpqProposal.ContactEmail" class="form-control" required />
                <span asp-validation-for="MtdCpqProposal.ContactEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            
            <div class="form-group">
                <label asp-for="MtdCpqProposal.Language" class="control-label"></label>
                <select class="form-control" asp-for="MtdCpqProposal.Language" asp-items="ViewBag.Language"></select>
                <span asp-validation-for="MtdCpqProposal.Language" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MtdCpqProposal.TitleName" class="control-label"></label>
                <input asp-for="MtdCpqProposal.TitleName" class="form-control" />
                <span asp-validation-for="MtdCpqProposal.TitleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.TitleNote" class="control-label"></label>
                <textarea asp-for="MtdCpqProposal.TitleNote" class="form-control"></textarea>
                <span asp-validation-for="MtdCpqProposal.TitleNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.PreparedFor" class="control-label"></label>
                <input asp-for="MtdCpqProposal.PreparedFor" class="form-control" required />
                <span asp-validation-for="MtdCpqProposal.PreparedFor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MtdCpqProposal.Description" class="control-label"></label>
                <textarea asp-for="MtdCpqProposal.Description" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="MtdCpqProposal.Description" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
